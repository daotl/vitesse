{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "sharedGlobals": [
      "{projectRoot}/.env.*",
      "{projectRoot}/tsconfig.json",
      {
        "env": "NODE_ENV"
      }
    ],
    "default": [
      "sharedGlobals",
      "{projectRoot}/**/*",
      "!{projectRoot}/**/?(*.)+spec.ts"
    ]
  },
  "targetDefaults": {
    "build": {
      "configurations": {
        "ci": {
          "options": {
            "generateLockfile": true
          }
        },
        "development": {
          "skipTypeCheck": false,
          "mode": "development"
        },
        "production": {
          "skipTypeCheck": true,
          "mode": "production"
        }
      }
    },
    "serve": {
      "options": {
        "port": 3333
      }
    },
    "preview": {
      "options": {
        "port": 3333
      }
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "{options.coverage.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true
      },
      "inputs": [
        "{projectRoot}/src/**/*.js",
        "{projectRoot}/src/**/*.jsx",
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.tsx",
        "{projectRoot}/test/**/*.js",
        "{projectRoot}/test/**/*.jsx",
        "{projectRoot}/test/**/*.ts",
        "{projectRoot}/test/**/*.tsx",
        "{projectRoot}/src/**/*.vue"
      ]
    },
    "lint": {
      "dependsOn": [
        {
          "target": "eslint",
          "params": "forward"
        },
        {
          "target": "stylelint",
          "params": "forward"
        }
      ],
      "cache": true,
      "inputs": [],
      "executor": "nx:run-commands",
      "options": {
        "command": "echo lint done, args:"
      }
    },
    "eslint": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "FIX={args.fix}; eslint . --fix=${FIX:-false}"
      }
    },
    "stylelint": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "FIX={args.fix}; stylelint \"src/**/*.{css,scss,vue,tsx}\" --fix=${FIX:-false}"
      }
    },
    "typecheck": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "vue-tsc --noEmit"
      }
    },
    "container": {
      "dependsOn": ["build"],
      "cache": true,
      "options": {
        "load": true,
        "platforms": ["linux/amd64", "linux/arm64"]
      },
      "configurations": {
        "ci": {
          "load": false,
          "push": true
        }
      }
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    }
  },
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static"
      }
    }
  ]
}
